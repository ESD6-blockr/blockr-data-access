{
  "name": "@blockr/blockr-data-access",
  "version": "1.0.0",
  "description": "Data access layer for Blockr",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build-watch": "tsc -w -p tsconfig.json",
    "test": "jest",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ESD6-blockr/blockr-data-access.git"
  },
  "author": "Blockr",
  "license": "MIT",
  "dependencies": {
    "@blockr/blockr-models": "^1.0.0-2",
    "inversify": "^5.0.1",
    "mongodb": "^3.2.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/mongodb": "^3.1.22",
    "@types/winston": "^2.4.4",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tsutils": "^3.9.1",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
